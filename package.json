    "serve:universal": "DISABLE_FIREBASE=true node dist/index.js",
    "firebase:local": "DISABLE_FIREBASE=true firebase serve",
    "firebase:deploy": "DISABLE_FIREBASE=true firebase deploy"
  },
  "private": true,
